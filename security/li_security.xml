<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Nhóm chỉ đọc -->
    <record id="group_library_readonly" model="res.groups">
        <field name="name">Library Read Only</field>
    </record>
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('library.group_library_readonly'))]"/>
    </record>


    <!-- Nhóm chỉnh sửa (có thể assign sách) -->
    <record id="group_library_editor" model="res.groups">
        <field name="name">Library Editor</field>
    </record>
