        <field name="groups" eval="[(4, ref('library.group_library_editor'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record> -->


    <!-- Nhóm full quyền -->
    <record id="group_library_user" model="res.groups">
