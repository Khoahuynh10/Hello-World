<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action xem full sach -->    
    <record id="action_library_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'default_state': 'available'}</field>
    </record>

    <!-- Action: Sách đang được assign cho mình -->
    <record id="action_library_books_assigned_to_me" model="ir.actions.act_window">
        <field name="name">My Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,kanban,form</field>
        <!-- chỉ lấy sách có borrower_id = current user -->
        <field name="domain">[('borrower_id', '=', uid)]</field>
    </record>

    <!-- Action: Sách đang rảnh (chưa assign cho ai) -->
    <record id="action_library_books_available" model="ir.actions.act_window">
        <field name="name">Available Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <!-- chỉ lấy sách chưa có borrower -->
        <field name="domain">[('borrower_id', '=', False)]</field>
        <field name="context">{'default_state': 'available'}</field>
    </record>

    <!-- Kanban view -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban string="Trạng thái" default_group_by="state">
                <field name="name"/>
                <field name="author"/>
                <field name="cover"/>
                <field name="state"/>
                <field name="borrower_id"/>
                <templates>
                    <t t-name="kanban-box">
                    <!-- <div class="oe_kanban_card"> -->
                        <div><field name="cover" widget="image" class="oe_kanban_avatar"/></div>
                        <div><strong><field name="name"/></strong></div>
                        <div><field name="author"/></div>
                        <div><field name="borrower_id"/></div>
                    <!-- </div> -->
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List view -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author"/>
                <field name="published_date"/>
                <field name="borrowed_date"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="published_date"/>
                        <field name="cover"/>
                        <field name="state"/>
                        <field name="borrower_id"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    

</odoo>
